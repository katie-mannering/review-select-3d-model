<section class="philosophy section-spacing">
  <div class="philosophy__inner page-width">
    <div class="philosophy__content">
      <h2 class="philosophy__heading h2">
        {%- if section.settings.heading != blank -%}{{ section.settings.heading }}{%- else -%}{{ 'sections.philosophy.default_heading' | t }}{%- endif -%}
      </h2>
      <div class="philosophy__text">
        {%- if section.settings.text != blank -%}{{ section.settings.text }}{%- else -%}{{ 'sections.philosophy.default_text' | t }}{%- endif -%}
      </div>
    </div>
    {%- if section.settings.image -%}
      <div class="philosophy__media">
        {{ section.settings.image | image_url: width: 800 | image_tag: loading: 'lazy', class: 'philosophy__image' }}
      </div>
    {%- endif -%}
  </div>
</section>

{% stylesheet %}
  .philosophy__inner {
    display: grid;
    grid-template-columns: 1fr;
    gap: 3rem;
    align-items: center;
  }

  .philosophy__heading {
    color: var(--color-accent);
    font-style: italic;
    margin-bottom: 1.5rem;
  }

  .philosophy__text {
    color: var(--color-text-secondary);
    font-size: 1.0625rem;
    line-height: 1.8;
    max-width: 560px;
  }

  .philosophy__media {
    border-radius: var(--radius-lg);
    overflow: hidden;
  }

  .philosophy__image {
    width: 100%;
    height: auto;
  }

  @media (min-width: 750px) {
    .philosophy__inner {
      grid-template-columns: 1fr 1fr;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "t:sections.philosophy.name",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "t:sections.philosophy.settings.heading.label",
      "default": "Head in tech, heart in art"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "t:sections.philosophy.settings.text.label",
      "default": "<p>We believe everyone deserves to be immortalized in sculpture. What was once reserved for emperors and aristocrats is now available to anyone with a selfie and a sense of humor.</p>"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "t:sections.philosophy.settings.image.label"
    }
  ],
  "presets": [
    {
      "name": "t:sections.philosophy.name"
    }
  ]
}
{% endschema %}
