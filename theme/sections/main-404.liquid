<section class="main-404 section-spacing">
  <div class="main-404__inner page-width">
    <h1 class="main-404__title h1">404</h1>
    <p class="main-404__heading">{{ 'pages.404.title' | t }}</p>
    <p class="main-404__text">{{ 'pages.404.subtext' | t }}</p>
    <a href="{{ routes.root_url }}" class="btn btn--primary">
      {{ 'pages.404.button' | t }}
    </a>
  </div>
</section>

{% stylesheet %}
  .main-404__inner {
    text-align: center;
    max-width: 600px;
    padding-block: 4rem;
  }

  .main-404__title {
    font-size: clamp(5rem, 15vw, 10rem);
    color: var(--color-accent);
    opacity: 0.3;
    line-height: 1;
    margin-bottom: 1rem;
  }

  .main-404__heading {
    font-family: var(--font-heading);
    font-size: 1.5rem;
    margin-bottom: 0.75rem;
  }

  .main-404__text {
    color: var(--color-text-secondary);
    margin-bottom: 2rem;
    line-height: 1.7;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "t:sections.main_404.name",
  "settings": []
}
{% endschema %}
