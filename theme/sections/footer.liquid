<footer class="footer" role="contentinfo">
  <div class="footer__inner page-width">
    <div class="footer__top">
      {%- if section.settings.show_newsletter -%}
        <div class="footer__newsletter">
          <h3 class="footer__heading">{{ 'sections.footer.newsletter_heading' | t }}</h3>
          {%- form 'customer', class: 'footer__newsletter-form' -%}
            <input type="hidden" name="contact[tags]" value="newsletter">
            <div class="footer__newsletter-field">
              <input
                type="email"
                name="contact[email]"
                class="footer__newsletter-input"
                placeholder="{{ 'sections.footer.newsletter_placeholder' | t }}"
                required
                autocomplete="email"
                aria-label="{{ 'sections.footer.newsletter_placeholder' | t }}"
              >
              <button type="submit" class="btn btn--primary footer__newsletter-btn">
                {{ 'sections.footer.newsletter_button' | t }}
              </button>
            </div>
          {%- endform -%}
        </div>
      {%- endif -%}

      {%- if section.blocks.size > 0 -%}
        <div class="footer__links">
          {%- for block in section.blocks -%}
            {%- if block.type == 'link_list' -%}
              <div class="footer__link-group" {{ block.shopify_attributes }}>
                {%- if block.settings.heading != blank -%}
                  <h4 class="footer__link-heading">{{ block.settings.heading }}</h4>
                {%- endif -%}
                {%- if block.settings.menu != blank -%}
                  <ul class="footer__link-list" role="list">
                    {%- for link in block.settings.menu.links -%}
                      <li>
                        <a href="{{ link.url }}" class="footer__link">{{ link.title }}</a>
                      </li>
                    {%- endfor -%}
                  </ul>
                {%- endif -%}
              </div>
            {%- endif -%}
          {%- endfor -%}
        </div>
      {%- endif -%}
    </div>

    <div class="footer__bottom">
      {%- if section.settings.show_social -%}
        <div class="footer__social">
          {%- if settings.social_instagram != blank -%}
            <a href="{{ settings.social_instagram }}" class="footer__social-link" aria-label="Instagram" target="_blank" rel="noopener">
              {%- render 'icon', name: 'instagram', size: 20 -%}
            </a>
          {%- endif -%}
          {%- if settings.social_tiktok != blank -%}
            <a href="{{ settings.social_tiktok }}" class="footer__social-link" aria-label="TikTok" target="_blank" rel="noopener">
              {%- render 'icon', name: 'tiktok', size: 20 -%}
            </a>
          {%- endif -%}
          {%- if settings.social_twitter != blank -%}
            <a href="{{ settings.social_twitter }}" class="footer__social-link" aria-label="X" target="_blank" rel="noopener">
              {%- render 'icon', name: 'twitter', size: 20 -%}
            </a>
          {%- endif -%}
          {%- if settings.social_facebook != blank -%}
            <a href="{{ settings.social_facebook }}" class="footer__social-link" aria-label="Facebook" target="_blank" rel="noopener">
              {%- render 'icon', name: 'facebook', size: 20 -%}
            </a>
          {%- endif -%}
        </div>
      {%- endif -%}

      <p class="footer__copyright">
        &copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. {{ 'sections.footer.copyright' | t }}
      </p>
    </div>
  </div>
</footer>

{% stylesheet %}
  .footer {
    background-color: var(--color-bg-secondary);
    border-top: 1px solid var(--color-border);
    padding: 4rem 0 2rem;
  }

  .footer__top {
    display: grid;
    grid-template-columns: 1fr;
    gap: 3rem;
    padding-bottom: 3rem;
    border-bottom: 1px solid var(--color-border);
  }

  .footer__heading {
    font-family: var(--font-heading);
    font-size: 1.25rem;
    margin-bottom: 1rem;
    color: var(--color-text);
  }

  .footer__newsletter-field {
    display: flex;
    gap: 0;
    max-width: 400px;
  }

  .footer__newsletter-input {
    flex: 1;
    padding: 0.75rem 1rem;
    background: var(--color-bg-primary);
    border: 1px solid var(--color-border);
    border-right: none;
    border-radius: var(--radius-sm) 0 0 var(--radius-sm);
    color: var(--color-text);
    font-size: 0.875rem;
  }

  .footer__newsletter-input::placeholder {
    color: var(--color-text-secondary);
  }

  .footer__newsletter-btn {
    border-radius: 0 var(--radius-sm) var(--radius-sm) 0;
    white-space: nowrap;
  }

  .footer__links {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: 2rem;
  }

  .footer__link-heading {
    font-family: var(--font-heading);
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 0.75rem;
    color: var(--color-text);
  }

  .footer__link-list {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .footer__link {
    font-size: 0.875rem;
    color: var(--color-text-secondary);
    text-decoration: none;
    transition: color var(--transition-fast);
  }

  .footer__link:hover {
    color: var(--color-accent);
  }

  .footer__bottom {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    padding-top: 2rem;
  }

  .footer__social {
    display: flex;
    gap: 1rem;
  }

  .footer__social-link {
    color: var(--color-text-secondary);
    transition: color var(--transition-fast);
  }

  .footer__social-link:hover {
    color: var(--color-accent);
  }

  .footer__copyright {
    font-size: 0.75rem;
    color: var(--color-text-secondary);
  }

  @media (min-width: 750px) {
    .footer__top {
      grid-template-columns: 1fr 2fr;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "t:sections.footer.name",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_newsletter",
      "label": "t:sections.footer.settings.show_newsletter.label",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_social",
      "label": "t:sections.footer.settings.show_social.label",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "link_list",
      "name": "t:sections.footer.blocks.link_list.name",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "link_list",
          "id": "menu",
          "label": "Menu"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "t:sections.footer.name",
      "blocks": [
        { "type": "link_list", "settings": { "heading": "Quick links" } },
        { "type": "link_list", "settings": { "heading": "Info" } }
      ]
    }
  ]
}
{% endschema %}
