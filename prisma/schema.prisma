// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

// Note that some adapters may set a maximum length for the String type by default, please ensure your strings are long
// enough when changing adapters.
// See https://www.prisma.io/docs/orm/reference/prisma-schema-reference#string for more information
datasource db {
  provider = "sqlite"
  url      = "file:dev.sqlite"
}

model Session {
  id            String    @id
  shop          String
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean   @default(false)
  locale        String?
  collaborator  Boolean?  @default(false)
  emailVerified Boolean?  @default(false)
  refreshToken        String?
  refreshTokenExpires DateTime?
}

model ModelOrder {
  id               Int    @id
  shopify_cust_id  String
  shopify_order_id String

  ModelGenerations ModelGenerations[]
  ModelOrderInputs ModelOrderInputs[]
}

model ModelOrderInputs {
  Id           Int        @id
  ModelOrder   ModelOrder @relation(fields: [modelOrderId], references: [id])
  modelOrderId Int
  url          String
}

model ModelGenerations {
  id             Int              @id
  ModelOrder     ModelOrder       @relation(fields: [modelOrderId], references: [id])
  modelOrderId   Int
  status         GenerationStatus @default(REQUESTED)
  selectedByCust Boolean          @default(false)
  glbUrl         String?
  stlUrl         String?
  mf3Url         String?
}

enum GenerationStatus {
  REQUESTED
  PREPROCESSING
  GENERATING
  POSTPROCESSING
  SUCCESS
  FAILURE
}

